<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceptionistPatientProfileView" >

       <TableRow
            android:id="@+id/trdocprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingLeft="10sp">

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawablePadding="-15sp"
            android:drawableTop="@drawable/btnprofile"
            android:paddingLeft="10sp"
            android:paddingRight="5sp"
            android:paddingTop="25sp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnScheduleAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawablePadding="-15sp"
            android:drawableTop="@drawable/btn_appointment"
            android:paddingLeft="15sp"
            android:paddingRight="5sp"
            android:paddingTop="25sp"
            android:textColor="#FFFFFF" />
        </TableRow>
         <TableRow
            android:id="@+id/trappdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingLeft="10sp">

        <Button
            android:id="@+id/btnAppoinmentDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawablePadding="-15sp"
            android:drawableTop="@drawable/btnappointmentdetails"
            android:paddingLeft="10sp"
            android:paddingRight="5sp"
            android:paddingTop="25sp"
            android:textColor="#FFFFFF" />
        </TableRow>

        
    </TableLayout>
    
